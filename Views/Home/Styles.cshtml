@{
    ViewData["Title"] = "Styles";
}

<section class="max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Our Shoe Styles</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white shadow rounded-xl p-4 hover:shadow-lg transition">
            <img src="~/images/men-shoe-6.jpg" alt="Sport Style" class="w-full rounded-md mb-3" />
            <h2 class="text-xl font-semibold">Sport</h2>
            <p class="text-gray-600">Comfortable and durable for running, gym, and outdoor activities.</p>
        </div>
        <div class="bg-white shadow rounded-xl p-4 hover:shadow-lg transition">
            <img src="~/images/men-shoe-1.jpg" alt="Casual Style" class="w-full rounded-md mb-3" />
            <h2 class="text-xl font-semibold">Casual</h2>
            <p class="text-gray-600">Everyday shoes that blend comfort and fashion effortlessly.</p>
        </div>
        <div class="bg-white shadow rounded-xl p-4 hover:shadow-lg transition">
            <img src="~/images/men-shoe-3.jpg" alt="Formal Style" class="w-full rounded-md mb-3" />
            <h2 class="text-xl font-semibold">Formal</h2>
            <p class="text-gray-600">Elegant and sleek designs for formal occasions and workwear.</p>
        </div>
    </div>
</section>

