

    @{
    ViewData["Title"] = "Shopping Cart";
    decimal grandTotal = 0;
    }


    <section class="max-w-5xl mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">Your Cart</h1>

        @if (Model != null && Model.Any())
    {
        <table class="min-w-full bg-white rounded-xl shadow">
            <thead>
                <tr class="text-left text-gray-700 bg-gray-100">
                    <th class="p-4">Product</th>
                    <th class="p-4">Price</th>
                    <th class="p-4">Quantity</th>
                    <th class="p-4">Total</th>
                    <th class="p-4">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var total = item.Quantity * item.Product.Price;
                    grandTotal += total;
                <tr class="border-b">
                    <td class="p-4">@item.Product.Name</td>
                    <td class="p-4">$@item.Product.Price</td>
                    <td class="p-4">@item.Quantity</td>
                    <td class="p-4">$@total</td>
                    <td class="p-4">
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="text-red-600 hover:underline">Remove</button>
                        </form>

                    </td>
                </tr>
                }
            </tbody>
        </table>

        <div class="text-right mt-4">
            <p class="text-lg font-semibold">Total: $@grandTotal</p>
            <a href="/Checkout" class="mt-2 inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded">Proceed to Checkout</a>
        </div>
    }
    else
    {
        <p>Your cart is empty.</p>
    }
    </section>


